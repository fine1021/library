<com.yxkang.android.widget.ScrollViewExtend xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yxkang.android.sample.SupportActivity"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_spt_security"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/security"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_spt_image"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/image"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_spt_status_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/status_bar"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_spt_xml"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/xml"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_spt_asynctask"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/asynctask"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_spt_clear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/clear"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_spt_wifiPwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/wifiPwd"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/bt_spt_systemProperties"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/systemProperties"
            android:textAllCaps="false" />

    </LinearLayout>

</com.yxkang.android.widget.ScrollViewExtend>
